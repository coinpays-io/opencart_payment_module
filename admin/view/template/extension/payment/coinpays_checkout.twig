{{ header }}
{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-free-checkout" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="alert alert-info">
            <i class="fa fa-exclamation-circle"></i>&nbsp;{{ help_coinpays_checkout }}
        </div>
        {% if errors is defined %}
            {% for key, errors_m  in errors %}
                <div class="alert alert-danger alert-dismissible"><i
                            class="fa fa-exclamation-circle"></i> {{ errors_message[key] }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}
        {% endif %}
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-free-checkout"
              class="form-horizontal">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_settings }} </h3>
                </div>
                <div class="panel-body">
                    <ul class="nav nav-tabs">
                        <li class="nav-tab active"><a href="#tab_api_information"
                                                      data-toggle="tab">{{ text_general }}</a></li>
                        <li class="nav-tab"><a href="#tab_order_status" data-toggle="tab">{{ text_order_status }}</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_api_information">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"
                                       for="callback_url">Callback URL:</label>
                                <div class="col-sm-10">
                                    <input type="text" id="callback_url" readonly
                                           value="{{ callback_url }}" class="form-control"
                                           placeholder="{{ callback_url }}"/>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label"
                                       for="input_merchant_id">{{ entry_merchant_id }}</label>
                                <div class="col-sm-10">
                                    <input type="text" id="input_merchant_id" name="payment_coinpays_checkout_merchant_id"
                                           value="{{ payment_coinpays_checkout_merchant_id }}" class="form-control"
                                           placeholder="{{ entry_merchant_id }}"/>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label"
                                       for="input_merchant_key">{{ entry_merchant_key }}</label>
                                <div class="col-sm-10">
                                    <input type="text" id="input_merchant_key"
                                           name="payment_coinpays_checkout_merchant_key"
                                           value="{{ payment_coinpays_checkout_merchant_key }}" class="form-control"
                                           placeholder="{{ entry_merchant_key }}"/>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label"
                                       for="input_merchant_salt">{{ entry_merchant_salt }}</label>
                                <div class="col-sm-10">
                                    <input type="text" id="input_merchant_salt"
                                           name="payment_coinpays_checkout_merchant_salt"
                                           value="{{ payment_coinpays_checkout_merchant_salt }}" class="form-control"
                                           placeholder="{{ entry_merchant_salt }}"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"
                                       for="input_language">{{ entry_language }}</label>
                                <div class="col-sm-10">
                                    <select id="input_language" name="payment_coinpays_checkout_lang"
                                            class="form-control">
                                        {% for key,k in language_arr %}
                                            <option value="{{ key }}"
                                                    {% if payment_coinpays_checkout_lang == key %}
                                                        selected="selected"
                                                    {% endif %}
                                            >{{ k }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input_total" class="col-sm-2 control-label"><span data-toggle="tooltip"
                                                                                              title="{{ help_total }}">{{ entry_total }}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" id="input_total"
                                           name="payment_coinpays_checkout_total"
                                           value="{{ payment_coinpays_checkout_total }}" class="form-control"
                                           placeholder="{{ entry_total }}"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input_module_layout"
                                       class="col-sm-2 control-label">{{ entry_module_layout }}</label>
                                <div class="col-sm-10">
                                    <select id="input_module_layout" name="payment_coinpays_checkout_module_layout"
                                            class="form-control">
                                        {% for key,k in module_layout %}
                                            <option value="{{ key }}"
                                                    {% if payment_coinpays_checkout_module_layout == key %}
                                                        selected="selected"
                                                    {% endif %}
                                            >{{ k }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"
                                       for="input_module_status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select id="input_module_status" name="payment_coinpays_checkout_status"
                                            class="form-control">
                                        {% if payment_coinpays_checkout_status==0 %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input_sort_order"
                                       class="col-sm-2 control-label">{{ entry_sort_order }}</label>
                                <div class="col-sm-10">
                                    <input type="text" id="input_sort_order"
                                           name="payment_coinpays_checkout_sort_order"
                                           value="{{ payment_coinpays_checkout_sort_order }}"
                                           class="form-control" placeholder="{{ entry_sort_order }}"/>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_order_status">
                            <div class="form-group required">
                                <label class="col-sm-2 control-label"
                                       for="input_order_status_completed">{{ entry_payment_complete }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_coinpays_checkout_order_completed_id"
                                            id="input_order_status_completed"
                                            class="form-control">
                                        {% if payment_coinpays_checkout_order_completed_id == '' %}
                                            <option value='' selected>{{ text_select }}</option>
                                        {% endif %}
                                        {% for order_status in order_statuses %}
                                            {% if order_status.order_status_id == payment_coinpays_checkout_order_completed_id %}
                                                <option value="{{ order_status.order_status_id }}"
                                                        selected="selected">{{ order_status.name }}</option>
                                            {% else %}
                                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label"
                                       for="input_order_status_canceled">{{ entry_payment_failed }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_coinpays_checkout_order_canceled_id"
                                            id="input_order_status_canceled"
                                            class="form-control">
                                        {% if payment_coinpays_checkout_order_canceled_id == '' %}
                                            <option value='' selected>{{ text_select }}</option>
                                        {% endif %}
                                        {% for order_status in order_statuses %}
                                            {% if order_status.order_status_id == payment_coinpays_checkout_order_canceled_id %}
                                                <option value="{{ order_status.order_status_id }}"
                                                        selected="selected">{{ order_status.name }}</option>
                                            {% else %}
                                                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    #categoryBasedArea .col-md-3:nth-child(2n) {
        background: #efefef;
    }
</style>

{{ footer }}